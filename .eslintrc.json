{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "semi": "off",
        "comma-dangle": "off",
        "@typescript-eslint/semi": ["error", "always"],
        "@typescript-eslint/comma-dangle": "off"
    }
}
